!!!
%html
  %head
    %title Iam
    = stylesheet_link_tag "application", "http://fonts.googleapis.com/css?family=Open+Sans"
    = javascript_include_tag "application"
    = csrf_meta_tags

  %body
    #body_wrapper
      #header
        .content
          #logo= link_to image_tag("logo.png"), root_path

          #search{:class => "fr"}
            %form{:action => "#"}
              %input{:type => "text", :id => "find", :name => "find", :placeholder => "search site"}
              %input{:type => "submit", :id => "send", :name =>"send"}  
          
          = render :partial => @admin ? "layouts/admin_menu" : "layouts/app_menu"
      
      - if flash[:alert]
        .flash.ui-state-error.ui-corner-all
          .flash_content      
            %span{:class => "ui-icon ui-icon-alert"}
            = flash[:alert]
      
      - if flash[:notice]
        .flash.ui-state-highlight.ui-corner-all
          .flash_content      
            %span{:class => "ui-icon ui-icon-info"}
            = flash[:notice]
            
      #breadcrumb
        .content
          
          = yield(:breadcrumbs)

 
      #main_content.clearfix
        .container
          = yield
      
      #footer_push
      
    #footer
      #footer_links
        &copy; iam Gallery Madrid - 
        = link_to "Aviso Legal", legal_path
