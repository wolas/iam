- content_for(:breadcrumbs) do
  %h1= @post.title
  %p 
    You are here: 
    = link_to "Home", root_path 
    >
    = link_to "Blog", posts_path
    >
    = @post.title
    

#links
  = link_to 'Edit', edit_post_path(@post)
  \|
  = link_to 'Back', posts_path
  |
  = link_to 'Destroy', [:admin, @post], :method => :delete, :data => { :confirm => 'Are you sure?' }

.post_item.clearfix
  .post_date
    .post_day= @post.posted_on.day
    .post_month= @post.posted_on.strftime("%b").upcase
    .post_year= @post.posted_on.year
  .post
    %h2= link_to @post.title, @post
    .post_body!= RedCloth.new(@post.body).to_html

= render :partial => "comments/list"

