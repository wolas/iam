- events.in_groups_of(4, false) do |events|    
  .events.clearfix
    - events.each do |event|
      .event
        - if event.photo
          = image_tag event.photo.image.url(:medium) if event.photo
        - else
          %img{:src => "http://placehold.it/200x200"}
          
        .info
          %h4= link_to event.name, event
          %p= event.short_summary 
          =link_to "[...]", event