= form_for [:admin, @artist], :html => { :multipart => true } do |f|
  - if @artist.errors.any?
    #error_explanation
      %h2= "#{pluralize(@artist.errors.count, "error")} prohibited this artist from being saved:"
      %ul
        - @artist.errors.full_messages.each do |msg|
          %li= msg
  
  = f.fields_for :photo_attributes do |form|
    .field
      = form.label :image
      = form.file_field :image
  
  .field
    = f.label :bio
    = f.text_area :bio
  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :birth
    = f.date_select :birth
  .field
    = f.label :nationality
    = f.text_field :nationality
  .field
    = f.label :web
    = f.text_field :web
  .actions
    = f.submit 'Save'
