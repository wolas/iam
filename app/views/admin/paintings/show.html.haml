#links
  = link_to 'Edit', edit_admin_artist_painting_path(@artist, @painting)
  \|
  = link_to 'Back', admin_artist_paintings_path(@artist)
  \|
  = link_to 'Destroy', [:admin, @artist, @painting], :method => :delete, :data => { :confirm => 'Are you sure?' }


.painting_image
  - if @painting.photo
    = image_tag @painting.photo.image.url(:medium)
  - else
    %img{:src => "http://placehold.it/200x200"}

.painting_info
  %p
    %b Artist:
    = link_to @painting.artist.name, @painting.artist
  %p
    %b Title:
    = @painting.title
  %p
    %b Technique:
    = @painting.technique
  %p
    %b Width:
    = @painting.width
  %p
    %b Height:
    = @painting.height
  %p
    %b Finished on:
    = @painting.finished_on
  %p
    %b Price:
    = @painting.price


